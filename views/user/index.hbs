 <div id="preloder">
        <div class="loader"></div>
    </div>
<!-- Hero Section Begin -->
<section class="hero mb-5">
    <div class="hero__slider owl-carousel">

        {{#each banner}}
        <div class="hero__items set-bg" data-setbg="/uploads/{{image}}">
            <div class="container">


                <div class="row">
                    <div class="col-xl-5 col-lg-7 col-md-8">
                        <div class="hero__text">
                            <h6>{{Name}}</h6>
                            <h2>{{caption}}</h2>
                            <p>{{description}}</p>
                            <a href="/shop" class="primary-btn">Shop now <span class="arrow_right"></span></a>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</section>
<!-- Hero Section End -->



<!-- Product Section Begin -->
<section class="product spad">
    <div class="container">

         <div class="row">
                <div class="col-lg-12">
                    <ul class="filter__controls">
                        {{#each headers}}
                        <li class="active" data-filter="*">
                            <a class="nav-link text-uppercase text-dark"
                                href="/categorysort/{{this._id}}">{{this.category}}</a>
                        </li>
                       
                        {{/each}}
                    </ul>
                </div>
            </div>

        <div class="row product__filter">
            {{#each a}}
            <div class="col-lg-3 col-md-6 col-sm-6 col-md-6 col-sm-6 mix new-arrivals">

                
                    <div class="product__item">

                        <div class="product__item__pic set-bg" data-setbg="/uploads/{{images.[0]}}">
                            {{#if status}}
                            {{#if catoffstatus}}
                            <h5><span class="badge text-danger ms-2"> {{sum offerper catofferper}} % Off</span>
                            </h5>
                            {{else}}
                            <h5><span class="badge text-danger ms-2"> {{offerper}} % Off</span></h5>
                            {{/if}}

                            {{else}}

                            {{#if catoffstatus}}
                            <h5><span class="badge text-danger ms-2"> {{catofferper}} % Off</span></h5>
                            {{else}}

                            <h5><span class="badge text-danger ms-2">0% off</span></h5>
                            {{/if}}

                            {{/if}}



                            <ul class="product__hover">

                                <li><a href="/product-details/{{this._id}}"><img src="user/img/icon/compare.png" alt="">
                                        <span>Go To detail</span></a></li>
                                {{!-- <li><a href="#"><img src="user/img/icon/heart.png" alt=""></a></li> --}}
                                <li><a onclick="addtocart('{{this._id}}')"><img
                                            src="user/img/icon/cart.png" alt=""> <span>+Add to cart</span></a></li>

                            </ul>
                        </div>

                        <div class="product__item__text">
                            <h6>{{Name}}</h6>
                            <a class="btn add-cart" onclick="addtocart('{{this._id}}')">
                                + Add To cart

                          
                            



                        </div>
                        {{#if status}}
                            {{#if catoffstatus}}
                            <s>&#x20B9; {{price}}</s><strong class="ms-2 text-danger"> &#x20B9; {{total}}</strong>
                            {{else}}
                            <s>&#x20B9; {{price}}</s><strong class="ms-2 text-danger"> &#x20B9; {{total}}</strong>
                            {{/if}}
                            {{else}}
                            {{#if catoffstatus}}
                            <s>&#x20B9; {{price}}</s><strong class="ms-2 text-danger"> &#x20B9; {{total}}</strong>
                            {{else}}
                            <strong class="ms-2 text-primary"> &#x20B9; {{price}}</strong>
                            {{/if}}
                            {{/if}}
                    </div>
                </a>
            </div>
            {{/each}}

        </div>
    </div>
</section>
<!-- Product Section End -->